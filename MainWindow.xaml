<Window x:Class="registroDestalle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:registroDestalle"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Menu Height="18">
                <MenuItem Header="Registros">
                    <MenuItem x:Name="DetalleMenuItem" Header="Registro Detalle" Click="DetalleMenuItem_Click"/>
                    <MenuItem x:Name="RolMenuItem" Header="Registro de Rol" Click="RolMenuItem_Click"/>
                </MenuItem>
                <MenuItem Header="Consultas">
                    <MenuItem x:Name="ConsultaDetalleMenuItem" Header="Registro Detalle" Click="ConsultaDetalleMenuItem_Click" />
                    <MenuItem x:Name="ConsultaRolMenuItem" Header="Registro de Rol" Click="ConsultaRolMenuItem_Click"/>
                </MenuItem>
            </Menu>
        </StackPanel>

    </Grid>
</Window>
